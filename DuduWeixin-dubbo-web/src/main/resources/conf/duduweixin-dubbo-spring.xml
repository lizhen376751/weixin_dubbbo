<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans  http://www.springframework.org/schema/beans/spring-beans.xsd
	   http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:protocol name="dubbo" port="${dubbo.application.port}"   host = "${dubbo.application.host}" />

	<!--获取店铺信息接口-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.shopinfo.api.ApiShopInfo" ref = "shopInfoService" owner = "lizhen"/>
	<!--登录日志接口-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.loginlog.api.ApiLogInLog" ref = "logInLogService"  owner = "lizhen"/>
	<!--验证码和短信密码发送接口-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.smssend.api.ApiSmsSend" ref = "smsSendService"  owner = "lizhen"/>
	<!--用户信息接口-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.shopweixinuser.api.ApiShopWeixinUser" ref = "shopWeixinUserService"  owner = "lizhen"/>
	<!--微信通讯相关接口-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.weixin.http.api.ApiAllWeiXiRequest" ref = "allWeiXinRquest"  owner = "lizhen"/>
	<!--appid与sercert的维护-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.weixin.weixinconfig.api.ApiWeiXinConfig" ref = "weiXinConfigService"  owner = "lizhen"/>
	<!--行驶证照片的扫描-->
	<dubbo:service interface="com.dudu.soa.weixindubbo.drivinglicense.ApiDrivingLicense" ref = "drivingLicense"  owner = "lizhen"/>

</beans>